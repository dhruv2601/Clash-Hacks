<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Video Preferences">
        <EditTextPreference
            android:name="FPS"
            android:defaultValue="5"
            android:key="editTextFPS"
            android:numeric="integer"
            android:summary="How many frames per second you want to extract from the video."
            android:title="FPS" />
        <EditTextPreference
            android:name="Delay"
            android:defaultValue="5"
            android:key="editTextDelay"
            android:numeric="integer"
            android:summary="The frames per second of the GIF image."
            android:title="Delay" />
        <ListPreference
            android:name="Width"
            android:defaultValue="360"
            android:entries="@array/widthStringArray"
            android:entryValues="@array/widthStringArray"
            android:key="listPreferenceWidth"
            android:summary="Width for GIF"
            android:title="Width" />
        <ListPreference
            android:name="Height"
            android:defaultValue="240"
            android:entries="@array/heightStringArray"
            android:entryValues="@array/heightStringArray"
            android:key="listPreferenceHeight"
            android:summary="Height for GIF"
            android:title="Height" />
        <ListPreference
            android:name="Choose Frame Decoder"
            android:defaultValue="1"
            android:entries="@array/frameDecoderArray"
            android:entryValues="@array/frameDecoderArrayValues"
            android:key="listPreferenceDecoder"
            android:summary="Choose the decoder to use based on your phone model."
            android:title="Choose Frame Decoder" />
    </PreferenceCategory>
</PreferenceScreen>
